<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/exam_widget"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/exam_widget_exam_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/exam_image" />

        <TextView
            android:id="@+id/exam_widget_exam_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/exam_widget_exam_image"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/exam_widget_exam_image"
            android:text="the app title"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/exam_widget_exam_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/exam_widget_exam_image"
            android:layout_alignBottom="@id/exam_widget_exam_image"
            android:textColor="@color/taken"
            android:text="Taken"/>

        <TextView
            android:id="@+id/exam_widget_exam_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100/100"
            android:textSize="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>